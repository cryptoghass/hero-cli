{
  "root": true,
  "parser": "babel-eslint",
  "extends": "standard",
  "env": {
    "browser": true
  },
  "rules": {
    "object-curly-spacing": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }
    ],
    "no-var": 2,
    "semi": [
      2,
      "never"
    ]
  }
}
